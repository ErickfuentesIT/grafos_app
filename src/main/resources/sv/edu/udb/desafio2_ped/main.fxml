<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="sv.edu.udb.desafio2_ped.controller.MainController">

    <!-- Centro: Vista Principal -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <!-- Mensaje de Bienvenida -->
            <Label text="¡Bienvenido a la Aplicación de Recorridos!" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label text="Selecciona un país para cargar el mapa correspondiente." style="-fx-font-size: 14px;" />

            <!-- Selector de País -->
            <ComboBox fx:id="countrySelector" promptText="Selecciona un país..." prefWidth="200" />

            <!-- Botón para Continuar -->
            <Button fx:id="loadButton" text="Cargar Mapa" onAction="#onLoadMap" style="-fx-font-size: 14px;" />
        </VBox>
    </center>

    <!-- Inferior: Pie de Página -->
    <bottom>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Aplicación desarrollada con Java y JavaFX" style="-fx-font-size: 10px; -fx-text-fill: gray;" />
        </VBox>
    </bottom>

</BorderPane>
