<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="sv.edu.udb.desafio2_ped.controller.GraphController">

    <!-- TOP: Opciones de Usuario -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Mapa Cargado: " />
            <ComboBox fx:id="mapSelector" promptText="Selecciona un mapa..." />
            <Button fx:id="loadMapButton" text="Cargar Mapa" onAction="#onLoadMap" />
        </HBox>
    </top>

    <!-- LEFT: Controles -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Opciones de Recorrido" style="-fx-font-weight: bold;" />
            <Button fx:id="bfsButton" text="Recorrido en Anchura (BFS)" onAction="#onBFS" />
            <Button fx:id="dfsButton" text="Recorrido en Profundidad (DFS)" onAction="#onDFS" />
        </VBox>
    </left>

    <!-- CENTER: VisualizaciÃ³n del Grafo -->
    <center>
        <Pane fx:id="graphPane" style="-fx-background-color: white; -fx-border-color: black;" />
    </center>

    <!-- BOTTOM: Estado -->
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Estado: " />
            <Label fx:id="statusLabel" text="Listo" />
        </HBox>
    </bottom>
</BorderPane>
